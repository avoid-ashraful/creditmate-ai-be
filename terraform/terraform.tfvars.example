# Copy this file to terraform.tfvars and fill in your values
# terraform.tfvars is gitignored for security

# Railway API token (get from https://railway.app/account/tokens)
railway_token = "your-railway-token-here"

# GitHub repository (update with your actual repository)
github_repo_url = "your-github-username/credit-mate-ai-backend"

# Django configuration
django_secret_key = "your-super-secret-django-key-here-make-it-long-and-random"
django_debug      = false
environment       = "production"

# Database passwords (use strong, random passwords)
postgres_password = "super-secure-postgres-password-123"
redis_password    = "super-secure-redis-password-456"

# AI API Keys (get from respective providers)
openrouter_api_key = "sk-or-v1-your-openrouter-key-here"
gemini_api_key     = "your-google-gemini-api-key-here"

# Security settings
allowed_hosts = ["your-domain.railway.app", "yourdomain.com"]

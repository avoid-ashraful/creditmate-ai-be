# Django Configuration
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Environment Configuration (local/staging/production)
# Email service is only enabled in production environment
ENVIRONMENT=local

# Database Configuration
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=db.sqlite3
DB_USER=
DB_PASSWORD=
DB_HOST=
DB_PORT=

# PostgreSQL example (uncomment and update if using PostgreSQL)
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=credit_mate_ai
# DB_USER=postgres
# DB_PASSWORD=yourpassword
# DB_HOST=localhost
# DB_PORT=5432

# Bank Crawler Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# Celery Configuration (Redis broker)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# CORS Configuration
# Comma-separated list of allowed origins for frontend applications
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://yourdomain.com
CORS_ALLOW_CREDENTIALS=True
# For development only - NEVER use in production
# CORS_ALLOW_ALL_ORIGINS=False

# API Rate Limiting
# Rate limits for anonymous users (per hour)
THROTTLE_RATE_ANON=1000/hour
# Rate limits for authenticated users (per hour)
THROTTLE_RATE_USER=2000/hour
# Burst rate limit (per minute)
THROTTLE_RATE_BURST=100/min

# Email Configuration (Only for production environment)
# For local/staging: emails are disabled automatically
# For production: configure SMTP settings below
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Production Email Configuration Examples
# Gmail: EMAIL_HOST=smtp.gmail.com, EMAIL_PORT=587, EMAIL_USE_TLS=True
# SendGrid: EMAIL_HOST=smtp.sendgrid.net, EMAIL_PORT=587, EMAIL_USE_TLS=True
# Mailgun: EMAIL_HOST=smtp.mailgun.org, EMAIL_PORT=587, EMAIL_USE_TLS=True

# Additional Production Settings
# ENVIRONMENT=production
# DEBUG=False
# ALLOWED_HOSTS=your-domain.com,www.your-domain.com
